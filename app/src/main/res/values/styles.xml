<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarTheme">@style/CommonActionBar</item>
        <item name="bottomAppBarStyle">@style/BottomAppBar</item>
    </style>

    <style name="CommonActionBar" parent="AppTheme">
        <item name="colorControlNormal">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="BottomAppBar" parent="@style/Widget.MaterialComponents.BottomAppBar">
        <!--<item name="android:background">#e0e0e0</item>-->
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="TextInputEditText">
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="TextButton">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
</resources>
