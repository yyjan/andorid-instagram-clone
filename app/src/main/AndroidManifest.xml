<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.yun.yunstagram">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
            android:name=".AppApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".ui.home.MainActivity"
                android:label="@string/app_name"/>
        <activity
                android:name=".ui.profile.ProfileEditActivity"
                android:label="@string/title_edit_profile"/>

        <activity
                android:name=".ui.profile.ProfileActivity"/>

        <activity android:name=".ui.post.PostEditActivity"
                  android:label="@string/title_post_create"/>

        <activity android:name=".ui.post.PostDetailActivity"
                  android:label="@string/title_post_detail"/>
        <activity
                android:name=".ui.search.SearchActivity"/>
        <activity
                android:name=".ui.auth.AuthActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>